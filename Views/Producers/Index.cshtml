@*Define model*@
@*@model List<Producer> // Method 1*@
@model IEnumerable<Producer> // Method 2

@*Define ViewData*@
@{
    ViewData["Title"] = "List of Producers";
}

@*Write code*@
<div class="row">
    <div class="cold-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr class="text-center">
                    @*<th>Profile Picture URL</th> Method 1*@
                    <th>@Html.DisplayNameFor(Model => Model.ProfilePictureURL)</th> @*Method 2*@
                    <th>@Html.DisplayNameFor(Model => Model.FullName)</th> @*Method 2*@
                    <th>@Html.DisplayNameFor(Model => Model.Bio)</th> @*Method 2*@
                    <th>Actions</th>
                </tr>

            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.ProfilePictureURL" alt="@item.FullName" style="max-width: 150px" />

                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Bio)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i>Edit </a> |
                            <a class="btn btn-outline-info"><i class="bi bi-eye"></i>Details </a> |
                            <a class="btn btn-danger text-white"><i class="bi bi-trash"></i>Delete </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
